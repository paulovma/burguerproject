<?xml version="1.0" encoding="UTF-8"?>
 
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">
 
	<persistence-unit name="PERSISTENCE_UNIT" transaction-type="RESOURCE_LOCAL">
 
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
 
	<!-- INFORMANDO O DATASOURCE -->
<!-- 	<jta-data-source>java:jboss/datasources/base_usuarioDS</jta-data-source> -->
 
<!-- 	<class>br.com.entelgy.burguerproject.controller.IndexController</class> -->
 
	<properties>
	  <property name="hibernate.hbm2ddl.auto" value="update" />
	  <property name="hibernate.show_sql" value="true" />
	  <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
	</properties>
 
       </persistence-unit>
 
</persistence>